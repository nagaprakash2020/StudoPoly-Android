<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.org.studopoly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.org.studopoly.activities.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.org.studopoly.activities.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.org.studopoly.activities.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.org.studopoly.activities.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name="com.org.studopoly.activities.SellBook"
            android:label="@string/title_activity_sell_book" >
        </activity>
        <activity
            android:name="com.org.studopoly.activities.SellBookDetails"
            android:label="@string/title_activity_sell_book_details" >
        </activity>
        <activity
            android:name="com.org.studopoly.MyBooks"
            android:label="@string/title_activity_my_books" >
        </activity>
        <activity
            android:name="com.org.studopoly.activities.BooksListed"
            android:label="@string/title_activity_books_listed" >
        </activity>
        
    </application>

</manifest>